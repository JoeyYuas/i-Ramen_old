<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".myRamenPointActivity"
        android:background="#00BCD4">

    <TextView
            android:text="@string/howManyEat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" android:textSize="24sp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="320dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:textColor="@color/colorPrimaryDark"/>
    <Spinner
            android:layout_width="124dp"
            android:layout_height="34dp"
            android:id="@+id/spinner"
            android:entries="@array/list"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="76dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="130dp"
            android:layout_marginStart="130dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="130dp" android:layout_marginRight="130dp" android:spinnerMode="dialog"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="130dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"/>
    <Button
            android:text="@string/option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/setOption" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="148dp"
            android:layout_marginStart="148dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="148dp" android:layout_marginRight="148dp" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/spinner" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" android:background="@color/colorPrimary"
            android:textColor="@color/colorAccent"/>
</android.support.constraint.ConstraintLayout>